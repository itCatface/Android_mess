<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.catface.kotlin.module.function.ad.AdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="20dp">

        <cc.catface.clibrary.util.view.viewpager.banner.RecyclerViewBannerNormal
            android:id="@+id/ad_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="测试1"
            android:textColor="#fff"
            android:textSize="24sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="20dp">

        <cc.catface.clibrary.util.view.viewpager.banner.RecyclerViewBannerNew
            android:id="@+id/ad_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="测试1"
            android:textColor="#fff"
            android:textSize="24sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="20dp">

        <cc.catface.clibrary.util.view.viewpager.banner.RecyclerViewBannerNormal
            android:id="@+id/ad_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:orientation="vertical"/>

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="测试1"
            android:textColor="#fff"
            android:textSize="24sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="20dp">

        <cc.catface.clibrary.util.view.viewpager.banner.RecyclerViewBannerNew
            android:id="@+id/ad_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:orientation="vertical"/>

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="测试1"
            android:textColor="#fff"
            android:textSize="24sp"/>

    </RelativeLayout>
</LinearLayout>
